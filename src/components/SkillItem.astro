---
import { Icon } from 'astro-icon/components'
const { name, icon } = Astro.props
---
<div class="flex flex-col items-center sm:flex-col sm:items-center sm:space-x-4">
    {icon && <Icon name={icon} class="w-8 h-8 sm:w-10 sm:h-10" />}
    <p class="text-[#0096c7] mt-2 text-sm sm:mt-0 sm:text-base">{name}</p>
</div>