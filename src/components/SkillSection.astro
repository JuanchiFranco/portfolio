    { key: 'languages', label: 'Programming languages' },
    { key: 'frameworks', label: 'Libraries/Frameworks' },
    { key: 'databases', label: 'Databases' },
    { key: 'tools', label: 'Tools/platforms' },
    { key: 'methodologies', label: 'Methodologies & soft skills' },
]

const skills = {
    languages: [
        {
            name: 'JavaScript',
            icon: "skills/javascript",
        },
        {
            name: 'Node.js',
            icon: "skills/nodejs"
        },
        {
            name: 'Java',
            icon: "skills/java"
        },
        {
            name: 'PHP',
            icon: "skills/php"
        },
        {
            name: 'HTML',
            icon: "skills/html"
        },
        {
            name: 'CSS',
            icon: "skills/css"
        }
    ],
    frameworks: [
        {
            name: 'Strapi CMS',
            icon: "skills/strapi"
        },
        {
            name: 'Express.js',
            icon: "skills/express"
        },
        {
            name: 'Spring Boot',
            icon: "skills/spring"
        },
        {
            name: 'Laravel',
            icon: "skills/laravel"
        },
        {
            name: 'Jest',
            icon: "skills/jest"
        },
        {
            name: 'PHPUnit',
            icon: "skills/phpunit"
        },
        {
            name: 'Tailwind CSS',
            icon: "skills/tailwindcss"
        }
    ],
    databases: [
        {
            name: 'MySQL',
            icon: "skills/mysql"
        },
        {
            name: 'PostgreSQL',
            icon: "skills/postgresql"
        },
        {
            name: 'MongoDB',
            icon: "skills/mongodb"
