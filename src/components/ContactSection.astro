---
import { Icon } from 'astro-icon/components';
const socialLinks = [
    {
        name: 'github.com/JuanchiFranco',
        url: 'https://github.com/JuanchiFranco',
        icon: 'mdi:github',
    },
    {
        name: 'juanfrancovargas-dev',
        url: 'https://linkedin.com/in/juanfrancovargas-dev',
        icon: 'mdi:linkedin',
    },
    {
        name: 'francovargajuandario@gmail.com',
        url: 'mailto:francovargajuandario@gmail.com',
        icon: 'ic:baseline-email',
    },
    {
        name: 'Colombia',
        url: null,
        icon: 'mdi:map-marker',
    },
];
---

<section id="contact" class="text-[#0096c7] text-center px-4 py-8 min-h-full flex-1 overflow-y-auto flex flex-col items-center justify-center sm:px-6 sm:py-10 md:px-8 md:py-12 lg:px-10 lg:py-16">
    <h1 class="text-[2.5rem] mb-2 font-bold sm:text-[2rem] md:text-[2.5rem] lg:text-[3rem]">Contáctame</h1>
    <h2 class="text-[1.5rem] mb-4 sm:text-[1.25rem] md:text-[1.5rem] lg:text-[1.75rem]">¡Conectemos!</h2>
    <div class="bg-white flex flex-col gap-4 border-[1px] rounded-lg border-solid border-[#0096c7] p-4 mb-4 w-full max-w-[500px] sm:max-w-[400px] md:max-w-[500px] lg:max-w-[600px] sm:p-6 md:p-8 lg:p-10 shadow-lg hover:shadow-xl transition-shadow">
        {socialLinks.map(link => (
            <a 
                {...(link.url ? { href: link.url, target: "_blank", rel: "noopener noreferrer" } : {})} 
                class="text-[#00b4d8] text-[2rem] hover:text-[#0077b6] flex items-center gap-2 sm:text-[1.5rem] md:text-[2rem] lg:text-[2.25rem] sm:gap-3 md:gap-4 lg:gap-5"
            >
                <Icon name={link.icon} class="w-6 h-6 sm:w-5 sm:h-5 md:w-6 md:h-6 lg:w-7 lg:h-7" />
                <p class="text-[1rem] sm:text-[0.875rem] md:text-[1rem] lg:text-[1.125rem]">{link.name}</p>
            </a>
        ))}
    </div>
</section>