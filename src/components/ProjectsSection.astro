---
import { Image } from "astro:assets";
import { projects } from "../data/projects.js";
---

<section id="projects" class="text-[#0096c7] text-center px-4 py-16 min-h-full flex-1 overflow-y-auto flex flex-col items-center justify-center">
    <h2 class="mb-8 font-bold text-[2.5rem] sm:text-[2rem] md:text-[2.25rem] lg:text-[2.5rem]">Projects</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-screen-xl mx-auto my-0 px-4 py-0">
        {projects.map((project) => (
            <div class="flex flex-col w-full p-6 rounded-lg border-solid border-[#0096c7] border-2 justify-between items-center bg-white shadow-lg hover:shadow-xl transition-shadow">
                <h3 class="text-[1.25rem] font-bold text-[#0096c7] mx-0 my-2 text-center">
                    {project.title} {(project.status) ? <small class="text-[#016074] font-bold">({project.status})</small> : ""}
                </h3>
                <div class="h-[200px] w-full overflow-hidden flex mx-0 my-4 sm:h-[250px] md:h-[300px] lg:h-[350px] aspect-w-16 aspect-h-9">
                    <Image class="w-full h-full object-contain object-center block rounded-md" style="object-fit: contain;" src={project.image} alt={project.alt} />
                </div>
                <p class="grow mb-4 text-[1rem] leading-[1.6] text-[#0096c7] sm:text-[0.9rem] md:text-[1rem] lg:text-[1.1rem] text-center">
                    {project.description}
                </p>
                <div class="flex flex-wrap justify-center gap-3">
                    {project.technologies.map((tech) => (
                        <div class="flex items-center gap-2 p-2 rounded-lg bg-[#f0f8ff] shadow-sm">
                            <img class="w-6 h-6" src={tech.icon} alt={tech.name} title={tech.name} />
                            <span class="text-[#016074] text-sm">{tech.name}</span>
                        </div>
                    ))}
                </div>
                <div class="flex flex-wrap justify-center gap-4 mt-6">
                    {project.repository && (
                        <a class="bg-[#0096c7] text-white font-bold py-2 px-4 rounded hover:bg-[#0077a3] transition-colors w-[140px] text-center inline-block text-sm" href={project.repository} target="_blank">
                            Repository
                        </a>
                    )}
                    {project.liveDemo && (
                        <a class="bg-[#0096c7] text-white font-bold py-2 px-4 rounded hover:bg-[#0077a3] transition-colors w-[140px] text-center inline-block text-sm" href={project.liveDemo} target="_blank">
                            See demo
                        </a>
                    )}
                </div>
            </div>
        ))}
    </div>
</section>